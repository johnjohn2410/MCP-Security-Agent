# OpenAI API Key for AI analysis
OPENAI_API_KEY=your_openai_api_key_here

# Security scanning configuration
SCAN_DEPTH=deep
SCAN_TIMEOUT=300000
MAX_CONCURRENT_SCANS=5

# MCP Server configuration
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# Logging configuration
LOG_LEVEL=info
LOG_FILE=logs/security-agent.log

# Security policies
ALLOWED_FILE_TYPES=js,ts,py,java,go,yml,yaml,json
BLOCKED_PATTERNS=password,secret,key,token

# Vulnerability database configuration
NVD_API_KEY=your_nvd_api_key_here
GITHUB_TOKEN=your_github_token_here

# Report configuration
REPORT_OUTPUT_DIR=reports
REPORT_RETENTION_DAYS=30

# AI Analysis configuration
AI_ANALYSIS_ENABLED=true
AI_CONFIDENCE_THRESHOLD=0.7
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.3

# Policy configuration
POLICY_AUTO_UPDATE=true
POLICY_UPDATE_INTERVAL=86400

# Network configuration
HTTP_TIMEOUT=30000
HTTP_RETRY_ATTEMPTS=3
HTTP_RETRY_DELAY=1000

# File system configuration
MAX_FILE_SIZE=10485760
SUPPORTED_ENCODINGS=utf-8,ascii,latin1

# Performance configuration
WORKER_THREADS=4
MEMORY_LIMIT=512MB
